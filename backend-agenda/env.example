# Variables de entorno para Agenda de Contactos
# Copia este archivo a .env para personalizarlo

# Configuración de la aplicación
SPRING_PROFILES_ACTIVE=docker
SERVER_PORT=8080

# Configuración de Java
JAVA_OPTS=-Xmx512m -Xms256m

# Configuración de la base de datos H2
H2_CONSOLE_ENABLED=true
H2_CONSOLE_PATH=/h2-console

# Configuración de logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EJEMPLO_AGENDA=DEBUG

# Configuración de Docker
DOCKER_IMAGE_NAME=agenda-contactos
DOCKER_IMAGE_TAG=latest
DOCKER_CONTAINER_NAME=agenda-contactos

# Configuración de red
DOCKER_NETWORK_NAME=agenda-network
